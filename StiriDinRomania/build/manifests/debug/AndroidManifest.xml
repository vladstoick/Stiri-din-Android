<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.vladstoick.stiridinromania">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="18"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name="com.vladstoick.stiridinromania.StiriApp" android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>

        <activity android:name="com.facebook.LoginActivity"/>
        <activity android:name="com.vladstoick.stiridinromania.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:launchMode="singleTop" android:name="com.vladstoick.stiridinromania.AllGroupsActivity"/>
        <activity android:name="com.vladstoick.stiridinromania.NewsGroupActivity" android:parentActivityName=".AllGroupsActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".AllGroupsActivity"/>
        </activity>

    </application>

</manifest>
