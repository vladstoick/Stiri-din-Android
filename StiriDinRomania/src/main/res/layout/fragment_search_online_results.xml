<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity$DummySectionFragment">
    <ProgressBar
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            style="Widget.Sherlock.Light.ProgressBar.Large"/>
    <ListView
            android:paddingLeft="@dimen/left_and_right_margin"
            android:paddingRight="@dimen/left_and_right_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newsitem_listview"/>
</RelativeLayout>
