<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="fill"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
         <WebView
            android:visibility="gone"
            android:id="@+id/news_item_detail_webView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <ScrollView
                android:id="@+id/news_item_scrollview"
                android:layout_width="wrap_content"
                android:fillViewport="true"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/left_and_right_margin"
                    android:layout_marginRight="@dimen/left_and_right_margin"
                    android:layout_marginBottom="@dimen/top_and_bottom_margin"
                    android:layout_marginTop="@dimen/top_and_bottom_margin"
                    android:id="@+id/news_item_detail_title"
                    android:text="@string/lorem_w_5"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textSize="@dimen/large_font"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView

                    android:id="@+id/news_item_detail_paperized"
                    android:textSize="@dimen/medium_font"
                    android:layout_marginLeft="@dimen/left_and_right_margin"
                    android:layout_marginRight="@dimen/left_and_right_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
             </LinearLayout>
        </ScrollView>

</LinearLayout>